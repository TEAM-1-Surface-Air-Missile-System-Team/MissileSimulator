<Window x:Class="MiniProject_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniProject_GUI"
        mc:Ignorable="d"
        Title="MINI Project" Height="450" Width="900">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Content="메시지 목록 :" FontWeight="Bold"/>
                <DataGrid x:Name="MessageTable" AutoGenerateColumns="False" Grid.Row="1" SelectionChanged="MessageTable_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding msgID}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding name}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding type}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Sharing" Binding="{Binding sharing}" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            <Grid Grid.Column="1" Margin="10 0 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Content="선택 메시지 인스턴스 목록 :" FontWeight="Bold"/>
                <DataGrid x:Name="InstanceList" Grid.Row="1" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="인스턴스 ID" Binding="{Binding }" IsReadOnly="True" Width="auto"/>
                    </DataGrid.Columns>
                </DataGrid>
                <!--<ListBox x:Name="InstanceList" Grid.Row="1">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Label Content="{Binding }"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>-->
            </Grid>
            <StackPanel Grid.Column="2" Margin="10 30 10 0" HorizontalAlignment="Right">
                <Button x:Name="PlugInButton" Content="Plug In" Width="120" Height="30" FontSize="15" Click="PlugInButton_Click"/>
                <Button x:Name="PlugOutButton" Content="Plug Out" Width="120" Height="30" FontSize="15" Click="PlugOutButton_Click" Margin="0 10 0 0"/>
                <Button x:Name="RegisterButton" Content="Register" Width="120" Height="30" FontSize="15" Click="RegisterButton_Click" Margin="0 10 0 0"/>
                <Button x:Name="DeleteButton" Content="Delete" Width="120" Height="30" FontSize="15" Click="DeleteButton_Click" Margin="0 10 0 0"/>
                <Button x:Name="UpdateButton" Content="Update" Width="120" Height="30" FontSize="15" Click="UpdateButton_Click" Margin="0 10 0 0"/>
                <Button x:Name="SendEventReport" Content="SendEventReport" Width="120"  Height="30" FontSize="15" Click="SendEventReportButton_Click" Margin="0 10 0 0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
